extends ../layout/layout.pug
block lay
    h6 Füge einen Kunden hinzu
    form(action="add_customer" method="POST" name='customers')
    
        label MembershipID
        input(type="number" name="membership_id" )
        br
        label Firstname
        input(type="text" name="Firstname" )
        br
        label Lastname
        input(type="text" name="Lastname" )
        br
        label Street
        input(type="text" name="street" )
        br
        label Zipcode
        input(type="number" name="zipcode" )
        br
        label E-Mail
        input(type="email" name="email" )
        br
        label Phone
        input(type="text" name="phone" )
        br
        label IBAN
        input(type="text" name="iban" )
        br
        label Birthday
        input(type="date" name="birthday" )
        br
        input(type='submit' value='hinzufügen' )
    p #{custMesAd.mess} #{custMesAd.firstname} #{custMesAd.lastname}

    h6 Lösche einen Kunden
    form(action="deleteCustomer" method="POST" name='delCustomers')
        label KundenID
        input(type="number" name="customerNumber" )
        br
        input(type='submit' value='löschen')
    p #{custMesAd.deleteMessage}
    h6 Lösche einen Kunden
    form(action="findCustomer" method="POST" name='findCustomer')
        label Vorname
        input(type="text" name="Firstname" )
        br
        label Nachname
        input(type="text" name="Lastname" )
        br
        label Geburtstag
        input(type="date" name="birthday" )
        br
        input(type='submit' value='finden')
    p #{custMesAd.findMessage}
    